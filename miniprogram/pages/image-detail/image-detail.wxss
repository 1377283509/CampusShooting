.bottom{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 12rpx;
  align-items: center;
}

.like-btn{
  width: 100%;
  padding: 24rpx 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.btn-bar{
  position: fixed;
  bottom: 32rpx;
  margin-top: 12rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: flex-end;
  padding: 12rpx 0;
}

.btn-bar button{
  margin-right: 24rpx;
  font-size: 42rpx;
}

.comment-bar{
  width: 100%;
  position: fixed;
  height: 50px;
  z-index: 1;
}
.comment-card{
  margin-top: 12rpx 0;
  padding: 24rpx 24rpx;
  background-color: white;
}

.comment-card-top{
  display: flex;
  flex-direction: row;
  justify-content: left;
  align-items: center;
}

.com-user-avatar{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50px;
}

.com-info{
  height: 70rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: flex-start;
}

.com-nickname{
  font-size: 28rpx;
  color: dimgrey;
}

.com-university{
  color: gray;
  font-size: 24rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.com-body{
  padding: 16rpx 24rpx 16rpx 0rpx;
  color: dimgrey;
  width: 100%;
}

.child-comments{
  background-color: rgba(0, 0, 0, 0.05);
  padding: 12rpx 12rpx;
  font-size: 26rpx;
}