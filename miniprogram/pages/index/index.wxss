.school-base{
  padding: 6rpx 16rpx; 
  display:inline-block;
  padding-bottom: 12rpx;
}

.school-card{
  width: min-content;
  height: 48rpx;
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: center;
  background-color: #f5f5f5;
  margin-left: 8rpx;
  border-radius: 50rpx;
}

.school-logo{
  width: 48rpx;
  height: 48rpx;
  display: inline-block;
}

.school-logo image{
  width: 100%;
  height: 100%;
  border-radius: 50rpx;
}

.school-name{
  margin-left: 6rpx;
  display: inline-block;
  font-size: 24rpx;
  padding-left: 8rpx;
  padding-right: 16rpx;
}

.nav-li {
  display: inline-block;
  padding: 24rpx 24rpx;
  border-radius: 12rpx;
  width: 31%;
  margin: 8rpx 1% 8rpx 1.1%;
  position: relative;
}