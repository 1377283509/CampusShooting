.scroll-view{
  height: 100vh;
}

.bottom-bar{
  width: 100%;
  height: 100rpx;
  display: flex;
  padding: 12rpx 12rpx;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  z-index: 1;
  background-color: white;
  z-index: 1;
}

.btn{
  position: fixed;
  z-index: 100;
  top: 10px;
  left: 10px;
}

.input{
  width: 80%;
  border-radius: 4px;
  padding: 0 25rpx;
  height: 70rpx;
  background-color: rgba(0, 0, 0, 0.05);
  font-size: 36rpx;
  line-height: 70rpx;
}

.icon-btn{
  height: 60rpx;
  width: 10%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  color: black;
  font-size: 50rpx;
}

.menu-card{
  width: 100%;
  height: 75px;
  margin-top: 1rpx;
  padding: 24rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;
  position: fixed;
  bottom: 0;
}

.menu{
  width: 100rpx;
  height: 110rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.menu-image{
  width: 100rpx;
  height: 100rpx;
}

.menu-text{
  font-size: 22rpx;
  color: gray;
}

