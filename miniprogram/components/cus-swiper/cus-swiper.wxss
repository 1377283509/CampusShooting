.swiper{
  height: 280rpx;
  width: 718rpx;
}

.image{
  width:100%;
  height:290rpx;
  border-radius:12rpx;
  position: relative;
}

.tag{
  position: absolute;
  left: 0;
  top: 12rpx;
  padding: 4rpx 12rpx;
  color: white;
  font-size: 24rpx;
  border-radius: 0 50rpx 50rpx 0rpx;
}

.title{
  bottom: 0;
  width: 100%;
  border-radius: 0 0 16rpx 16rpx;
  background-color: rgba(0, 0, 0, 0.1);
  height: 40rpx;
  color: white;
  line-height: 40rpx;
  font-size: 28rpx;
}