.card{
  width: 480rpx;
  height: 280rpx;
  display: inline-block;
  position: relative;
  margin-left: 12rpx;
}

.card-image{
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

.card-tag{
  position: absolute;
  top: 0;
  left: 0;
  border-radius: 16rpx 0 16rpx 0;
  background-color: #7986cb;
  color: white;
  font-size: 22rpx;
  font-weight: normal;
  padding: 4rpx 12rpx;
}

.card-title{
  width: 100%;
  bottom: 0;
  left: 0;
  padding: 4rpx 12rpx;
  background-color: rgba(0, 0, 0, 0.2);
  color: white;
  position: absolute;
  font-size: 24rpx;
  border-radius: 0 0 16rpx 16rpx;
}